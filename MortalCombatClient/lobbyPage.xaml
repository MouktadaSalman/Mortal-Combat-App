<Page x:Class="MortalCombatClient.lobbyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MortalCombatClient"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="lobbyPage">

    <Grid>
        <ListBox Name="LobbyRoomList" HorizontalAlignment="Left" VerticalAlignment="Top" Width="452" Height="257" Margin="25,38,0,0"/>
        <Button Content="Join Lobby" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Click="JoinLobbyButton_Click" Margin="495,170,0,0"/>
        <Button Content="Create Lobby" HorizontalAlignment="Right" VerticalAlignment="Top" Width="100"  Margin="0,365,300,0" Click=" CreateLobbyButton_Click" RenderTransformOrigin="0.525,0.679"/>
        <TextBox Name="NewLobbyName" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="258" Margin="122,0,0,58" Height="35" />
        <TextBox Text="Choose from the following lobbies" HorizontalAlignment="Left" Height="23" Margin="25,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="452" IsEnabled="False" FontWeight="Bold" TextAlignment="Center" />
        <TextBox HorizontalAlignment="Left" Height="28" Margin="157,312,0,0" Text="or Create your own lobby" VerticalAlignment="Top" Width="188" IsEnabled="False" TextAlignment="Center" TextWrapping="Wrap" FontWeight="Bold" FontStyle="Italic"/>


    </Grid>
</Page>
