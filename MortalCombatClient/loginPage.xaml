<Page x:Class="MortalCombatClient.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MortalCombatClient"
        mc:Ignorable="d"
        Title="loginPage"  Height="450" Width="800">
    <Grid>
        <Button Content="Login" HorizontalAlignment="Center" Margin="0,293,0,0" VerticalAlignment="Top" Height="35" Width="196" Click="Button_Click" FontSize="22" FontFamily="Algerian"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Enter your desired username to create account" VerticalAlignment="Center" Height="30" Width="612" FontFamily="Algerian" FontSize="22" TextAlignment="Center"/>
        <TextBox x:Name="UsernameBox" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="538" Height="33" Margin="0,245,0,0" FontSize="20" FontFamily="Algerian" Background="{x:Null}" BorderBrush="Black" TextAlignment="Center" SelectionOpacity="1"/>

    </Grid>
</Page>
