<Page x:Class="MortalCombatClient.loginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MortalCombatClient"
        mc:Ignorable="d"
        Title="loginPage"  Height="450" Width="800">
    <Grid>
        <Button Content="Login" HorizontalAlignment="Center" Margin="0,255,0,0" VerticalAlignment="Top" Height="31" Width="152" Click="Button_Click"/>
        <TextBox Name="UsernameBox" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Username" VerticalAlignment="Center" Width="460" Height="50"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,168,0,0" TextWrapping="Wrap" Text="Enter your desired username to create account" VerticalAlignment="Top" Height="27" Width="344"/>

    </Grid>
</Page>
